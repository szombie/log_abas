<h1>Listado de Facturas</h1>


<table class="table table-striped">
  <tr>
    
    <th>Folio</th>
    <th>Fecha</th>
    <th>Socio Comercial</th>
    <th>Cliente</th>
    <th>Total</th>
    <th>Estado</th>
    <th></th>

  </tr>

<% @invoices.each do |invoice| %>
  <tr>
     <td><%= invoice.folio %></td>
    <td><%= invoice.fecha %></td>
    <td><%= invoice.member.name_member %></td>
    <td><%= invoice.client.name_client %></td>
    <td><%= invoice.total %></td>
    <td><%= invoice.status %></td>
    <td><%= link_to 'Ver', invoice_path(invoice), class: "btn btn-mini"  %>
    <%= link_to 'Editar', edit_invoice_path(invoice) , class: "btn btn-primary btn-mini" %>
    <%= link_to 'Eliminar', invoice , method: :delete, data: { confirm: 'Â¿Estas seguro?' } , class: "btn btn-danger btn-mini" %></td>
    
  </tr>
<% end %>

</table>

