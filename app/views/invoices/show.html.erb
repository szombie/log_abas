<h1>Factura <%= @invoice.folio %></h1>
<table class="table table-bordered table-striped">
  <colgorup>
    <col class="span1">
    <col class="span7">
  </colgroup>
    <thead>
      <tr>
        <th>Datos</th>
        <th>Descripci√≥n</th>
      </tr> 
    </thead>

  <tbody>
    <tr>
      <th>Folio</th>
      <td><%= @invoice.folio %></td>
    </tr>
    <tr>
      <th>Fecha</th>
      <td><%= @invoice.fecha %></td>
    </tr>
  <tr>
      <th>Socio Comercial</th>
      <td><%= @invoice.member.name_member %></td>
  </tr>
  <tr>
      <th>Cliente</th>
      <td><%= @invoice.client.name_client %></td>
  </tr>
  <tbody>
  </table>

<table class="table table-bordered table-striped">
  <thead>
      <tr>
        <th class = "cantidad">Cantidad</th>
        <th>Nombre Producto</th>
        <th>Precio Unitario</th>
        <th>Subtotal</th>
      </tr> 
  </thead>
  <% @invoice.products.each_with_index do |product, i| %>
  <tr>
    <td><%= @cantidades[i] %></td>
    <td><%= product.product_name %></td>
    <td><%= number_to_currency(@precio_unitario[i], :locale => :mx) %></td>
     <td><%= number_to_currency(@subtotals[i] ,:locale => :mx) %></td>
  </tr>
    <%end%>
  </table>  
<table class="table table-bordered table-striped">
  <tr>
      <th>SubTotal</th>
    <td><%= number_to_currency(@invoice.total, :locale => :mx) %></td>
</tr>
<tr>
     <th>IVA</th>
    <td><%= number_to_currency(@invoice.iva, :locale => :mx) %></td>
</tr>
<tr>
     <th>Total</th>
    <td><%= number_to_currency(@invoice.totalfinal, :locale => :mx) %></td>
</tr>
</table>


<%= factura_drop_menu("Agregar Factura", new_invoice_path,@invoice.member_id) %>
