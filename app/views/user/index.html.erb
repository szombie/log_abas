<h1>Listado de Usuarios</h1>

<div id = "users">
<h1><%= @titulo %></h1>

<table class="table table-striped">
  <tr>
    <th>Usuario</th>

    <th class="medium"></th>
    
  </tr>

<% @users.each do |user| %>
  <tr>
    <td class ="medium"><%= user.email.truncate(30) %></td>
    
    
    <td class ="medium"><%= link_to 'Ver', user, class: "btn btn-mini" %>
    <%= link_to 'Editar', edit_user_path(user),class: "btn btn-primary btn-mini" %>
    <%= link_to 'Eliminar', user,class: "btn btn-mini btn-danger", method: :delete, data: { confirm: 'Â¿Estas Seguro' } %>
</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Usuario', new_user_path , class: "btn btn-primary" %>
</div>