
<h1>Listado de Usuarios</h1>

<table class="table table-striped">
  <tr>
    <th>Nombre de Usuario</th>
    <th>Email</th>
    <th>Rol</th>
    <th>Creado en</th>
    <th>Ultimo Ingreso</th>
    <th>Numero de Ingresos</th>
    <th></th>
    </tr>

 <% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.roles.first.name %></td>
	<td><%= user.created_at %></td>
	<td><%= user.last_sign_in_at %></td>
	<td><%= user.sign_in_count %></td>
    <td><%= link_to 'Eliminar',user_user_path(user), class: "btn btn-mini btn-danger", method: :delete, data: { confirm: 'Â¿Estas Seguro?' } %></td>
  </tr>
<% end %>
</table>

