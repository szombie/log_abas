<%= simple_form_for @user,:url => user_users_path(@user),:html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.association :roles,   :as => :check_boxes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit  %>
  </div>
<% end %>
