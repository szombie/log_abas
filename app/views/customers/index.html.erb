<% @customers.each do |customer| %>
  <tr>
    <td><%= customer.client_id %></td>
    <td><%= customer.member_id %></td>
    <td><%= customer.client_code %></td>
    <td><%= link_to 'Ver', customer, client, class: "btn btn-mini btn-primary" %></td>
    <td><%= link_to 'Editar', edit_customer_path(customer), client, class: "btn btn-mini" %></td>
    <td><%= link_to 'Eliminar', customer, client, class: "btn btn-mini btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

